  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  >
  
  <Button  android:id="@+id/btnPre"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="pre"
  ></Button>
  
  <Button  android:id="@+id/btnNext"
  	android:layout_width="wrap_content"
