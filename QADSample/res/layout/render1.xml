<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:id="@+id/root"
  >
  	<TextView android:text="用户名:"/>
  	<TextView android:id="@+id/account"></TextView>
  
  	<TextView android:text="密码:"/>
  	<TextView android:id="@+id/password"></TextView>
  
  	<TextView android:text="Email:"/>
  	<TextView android:id="@+id/email"></TextView>
  
  	<TextView android:text="验证问答:"/>
  	<TextView android:id="@+id/validateQuestion"></TextView>
  
  <TextView android:id="@+id/validateAnswear"></TextView>
  
  	<TextView android:text="验证码:"/>
  	<TextView android:id="@+id/validateNumber"></TextView>
  
  <TableRow>
  <ImageView android:id="@+id/validatePicture"></ImageView>
  </TableRow>
  
  <CheckBox android:id="@+id/approve" android:text="是否赞成协议"></CheckBox>
  
  
</TableLayout>
